@model IEnumerable<Proekt.Models.Class>
@{
    ViewData["Title"] = "Панель ученика";
}

<div class="container mt-4">
    <h2><i class="bi bi-book text-primary me-2"></i>Ваши классы</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Вы пока не добавлены ни в один класс.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var cls in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@cls.Name</h5>
                            <p class="card-text">
                                Создан: @cls.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")
                            </p>
                            <a asp-action="Chat" asp-route-classId="@cls.Id" class="btn btn-primary">
                                Перейти в чат
                            </a>
                            <a asp-action="Discussions" asp-route-classId="@cls.Id" class="btn btn-outline-secondary ms-2">
                                Обсуждения
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
