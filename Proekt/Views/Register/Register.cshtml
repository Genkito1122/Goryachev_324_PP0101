@model RegisterModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Регистрация";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <span class="material-icons">person_add</span>
            <h2>Регистрация</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-error mb-3"></div>
            <div class="form-group">
                <label asp-for="FullName" class="form-label">
                    <span class="material-icons">person</span> ФИО
                </label>
                <input asp-for="FullName" class="form-control" placeholder="Введите ваше имя" />
                <span asp-validation-for="FullName" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <span class="material-icons">email</span> Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="Введите ваш email" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <span class="material-icons">lock</span> Пароль
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Придумайте пароль" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="form-label">
                    <span class="material-icons">group</span> Роль
                </label>
                <select asp-for="Role" class="form-control">
                    <option value="">Выберите роль</option>
                    <option value="student">Ученик</option>
                    <option value="parent">Родитель</option>
                    <option value="teacher">Учитель</option>
                </select>
                <span asp-validation-for="Role" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-auth">
                    <span class="material-icons">how_to_reg</span> Зарегистрироваться
                </button>
            </div>

            <div class="auth-footer">
                Уже есть аккаунт? <a asp-controller="Auth" asp-action="Login">Войдите</a>
            </div>
        </form>
    </div>
</div>
