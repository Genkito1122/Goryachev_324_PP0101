@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Вход в систему";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <span class="material-icons">login</span>
            <h2>Вход в систему</h2>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <span class="material-icons">email</span> Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="Введите ваш email" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <span class="material-icons">lock</span> Пароль
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-auth">
                    <span class="material-icons">arrow_forward</span> Войти
                </button>
            </div>

            <div class="auth-footer">
                Нет аккаунта? <a asp-controller="Register" asp-action="Register">Зарегистрируйтесь</a>
            </div>
        </form>
    </div>
</div>
