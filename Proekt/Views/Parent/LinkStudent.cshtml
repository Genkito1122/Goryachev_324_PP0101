@{
    ViewData["Title"] = "Привязать ученика";
}

<div class="container mt-4">
    <h2>Привязать ученика</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="LinkStudent" method="post">
        <div class="form-group mb-3">
            <label for="studentEmail" class="form-label">Email ученика</label>
            <input type="email" name="studentEmail" id="studentEmail" class="form-control" required placeholder="example@student.com" />
        </div>
        <button type="submit" class="btn btn-primary">Привязать</button>
        <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">Назад</a>
    </form>
</div>
