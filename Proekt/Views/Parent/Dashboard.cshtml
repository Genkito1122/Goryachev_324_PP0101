@model IEnumerable<Proekt.Models.Class>
@{
    ViewData["Title"] = "Панель родителя";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill text-primary me-2"></i>Классы ваших учеников</h2>
        <a asp-action="LinkStudent" class="btn btn-success">
            <i class="bi bi-link-45deg"></i> Привязать ученика
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">У вас пока нет привязанных учеников.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var cls in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@cls.Name</h5>
                            <p class="card-text">
                                Создан: @cls.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")
                            </p>
                            <a asp-controller="Teacher" asp-action="Chat" asp-route-classId="@cls.Id" class="btn btn-primary">
                                Перейти в чат
                            </a>
                            <a asp-controller="Discussion" asp-action="List" asp-route-classId="@cls.Id" class="btn btn-outline-secondary ms-2">
                                Обсуждения
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

